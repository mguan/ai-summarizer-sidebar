{
    "manifest_version": 3,
    "name": "AI Summarizer Sidebar",
    "version": "0.2",
    "description": "A Sidebar for analyzing and summarizing any webpage or video using AI.",
    "permissions": [
        "declarativeNetRequest",
        "sidePanel",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://claude.ai/*",
                "https://gemini.google.com/*",
                "https://grok.com/*"
            ],
            "js": [
                "injector.js"
            ],
            "all_frames": true
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Open AI Summarizer Sidebar"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}